<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:orientation="vertical" >

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
	     <Button android:layout_weight="1"
	         style="@style/ImageButtonWithText"
	         android:drawableTop="@drawable/logoman"
	         android:text="Final Prototype UI"
	         android:onClick="goToTestVitalSigns"/>
	     <Button android:layout_weight="1"
	         style="@style/ImageButtonWithText"
	         android:drawableTop="@drawable/logou"
	         android:text="HR/BP/Temp at 30fps"
	         android:onClick="goToTestBloodPressure"/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
	     <Button android:layout_weight="1"
	         style="@style/ImageButtonWithText"
	         android:drawableTop="@drawable/logou"
	         android:text="HR/BP at 5fps"
	         android:onClick="goToTestBodyTemperature"/>
	     <Button android:layout_weight="1"
	         style="@style/ImageButtonWithText"
	         android:drawableTop="@drawable/logou"
	         android:text="[N/A] Respiratory Rate"
	         android:onClick="goToTestRespiratoryRate"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
        <Button android:layout_weight="1"
            style="@style/ImageButtonWithText"
            android:drawableTop="@drawable/logou"
            android:text="[N/A] Oxygen Saturation"
            android:onClick="goToTestOxygenSaturation"/>
        <Button android:layout_weight="1"
            style="@style/ImageButtonWithText"
            android:drawableTop="@drawable/logou"
            android:text="Facial Detection"
            android:onClick="goToTestFacialGestures"/>
    </LinearLayout>
    
</LinearLayout>
