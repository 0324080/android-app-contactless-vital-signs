<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="3">
	        <Button android:id="@+id/button1" android:layout_weight="1"
	            style="@style/ImageButtonWithText"
	            android:drawableTop="@drawable/logoman"
	            android:text="All Vital Signs"
	            android:onClick="goToTestVitalSigns"/>
	        <Button android:id="@+id/button2" android:layout_weight="1"
	            style="@style/ImageButtonWithText"
	            android:drawableTop="@drawable/logou"
	            android:text="Heart Rate"
	            android:onClick="goToTestHeartRate"/>
	        <Button android:id="@+id/button2" android:layout_weight="1"
	            style="@style/ImageButtonWithText"
	            android:drawableTop="@drawable/logou"
	            android:text="Blood Pressure"
	            android:onClick="goToTestBloodPressure"/>
	    </LinearLayout>
	    
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="3">
	        <Button android:id="@+id/button1" android:layout_weight="1"
	            style="@style/ImageButtonWithText"
	            android:drawableTop="@drawable/logou"
	            android:text="Body Temperature"
	            android:onClick="goToTestBodyTemperature"/>
	        <Button android:id="@+id/button2" android:layout_weight="1"
	            style="@style/ImageButtonWithText"
	            android:drawableTop="@drawable/logou"
	            android:text="@string/resp_rate"
	            android:onClick="goToTestRespiratoryRate"/>
	        <Button android:id="@+id/button2" android:layout_weight="1"
	            style="@style/ImageButtonWithText"
	            android:drawableTop="@drawable/logou"
	            android:text="Oxygen Saturation"
	            android:onClick="goToTestOxygenSaturation"/>
	    </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="3">
	        <Button android:id="@+id/button1" android:layout_weight="1"
	            style="@style/ImageButtonWithText"
	            android:drawableTop="@drawable/logou"
	            android:text="Pupil Dilation"
	            android:onClick="goToTestPupilDilation"/>
	        <Button android:id="@+id/button2" android:layout_weight="1"
	            style="@style/ImageButtonWithText"
	            android:drawableTop="@drawable/logou"
	            android:text="Eye Saccades"
	            android:onClick="goToTestEyeSaccades"/>
	        <Button android:id="@+id/button2" android:layout_weight="1"
	            style="@style/ImageButtonWithText"
	            android:drawableTop="@drawable/logou"
	            android:text="Facial Gestures"
	            android:onClick="goToTestFacialGestures"/>
	    </LinearLayout>
	    
    </LinearLayout>

</RelativeLayout>
