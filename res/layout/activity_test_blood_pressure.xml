<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >
        
<!--         <SurfaceView android:id="@+id/camera_preview" android:layout_width="match_parent" android:layout_height="0dip" -->
<!--             android:layout_weight="1" /> -->

		<FrameLayout
		    android:id="@+id/camera_preview"
		    android:layout_width="match_parent"
		    android:layout_height="0dip"
		    android:layout_weight="1"
		    />

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
	        android:orientation="horizontal" >
        
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
		        android:orientation="vertical" 
		        android:layout_weight="1" >
		        
		        <TextView android:id="@+id/textViewBloodPressure" android:layout_width="wrap_content" android:layout_height="wrap_content"
		            android:text="Blood Pressure: calculating"
		            android:layout_weight="1" />
		        
		        <TextView android:id="@+id/debug" android:layout_width="wrap_content" android:layout_height="wrap_content"
		            android:text="Debug: width * height"
		            android:layout_weight="1" />
		        <TextView android:id="@+id/red" android:layout_width="wrap_content" android:layout_height="wrap_content"
		            android:text="Red: rValue"
		            android:layout_weight="1" />
		        <TextView android:id="@+id/green" android:layout_width="wrap_content" android:layout_height="wrap_content"
		            android:text="Green: gValue"
		            android:layout_weight="1" />
		        <TextView android:id="@+id/blue" android:layout_width="wrap_content" android:layout_height="wrap_content"
		            android:text="Blue: bValue"
		            android:layout_weight="1" />
		        
		        <Button
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:text="get RGB"
		            android:onClick="getRGB" />
		        
			</LinearLayout>
	        
	        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
	            android:text="     " android:layout_weight="1" />
	        
	        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
		        android:orientation="vertical" 
		        android:layout_weight="1" >
		        
		        <TextView android:id="@+id/textViewAge" android:layout_width="wrap_content" android:layout_height="wrap_content"
		            android:text="Age: 22" />
		        
		        <TextView android:id="@+id/textViewSex" android:layout_width="wrap_content" android:layout_height="wrap_content"
		            android:text="Sex: Male" />
		        
		        <TextView android:id="@+id/textViewWeight" android:layout_width="wrap_content" android:layout_height="wrap_content"
		            android:text="Weight: 160 lbs" />
		        
		        <TextView android:id="@+id/textViewHeight" android:layout_width="wrap_content" android:layout_height="wrap_content"
		            android:text="Height: 75 inches" />

		        <Button
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:text="Edit"
		            android:onClick="goToEditStats" />

			</LinearLayout>
 		</LinearLayout>
    </LinearLayout>

</RelativeLayout>
